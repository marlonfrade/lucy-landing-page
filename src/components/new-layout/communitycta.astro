---
import { Image } from "@astrojs/image/components";
import LucyCommunity from "~/assets/lucy-community.png";
---

<div class="container mx-auto px-4 py-12">
    <div class="flex w-full justify-center">
        <div
            class="w-full bg-gradient-to-r from-indigo-500 to-indigo-700 px-5 py-4 md:w-11/12 md:px-8 md:py-8 xl:w-10/12 xl:px-12 xl:py-16"
        >
            <div>
                <div
                    class="flex flex-col-reverse flex-wrap items-center md:flex-row"
                >
                    <div
                        class="flex w-full flex-col items-center justify-center pb-6 pt-4 md:block md:w-2/3 md:pb-0 md:pr-6 md:pt-0"
                    >
                        <div>
                            <h1
                                role="heading"
                                class="text-center font-black leading-6 text-white text-xl md:text-left md:text-2xl lg:w-10/12 lg:leading-10 lg:text-3xl"
                            >
                                Use a Lucy na sua comunidade do Discord e
                                descubra um mundo de conhecimento e interação!
                            </h1>
                        </div>
                        <button
                            type="button"
                            role="button"
                            disabled
                            aria-label="Join the community"
                            class="relative mt-5 rounded-lg bg-white px-4 py-3 font-bold text-indigo-700 text-sm hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 disabled:bg-opacity-40 lg:mt-8 lg:px-8 lg:py-4 lg:text-lg xl:text-xl"
                            >Lucy na sua Comunidade <div
                                class="absolute -right-3 -top-3 rounded-full bg-green-500 px-2.5 py-0.5 text-xs"
                            >
                                EM BREVE
                            </div></button
                        >
                    </div>
                    <div class="w-2/3 md:w-1/3">
                        <Image
                            src={LucyCommunity}
                            alt="descriptive text"
                            width={380}
                            height={450}
                            aspectRatio="1:1"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
