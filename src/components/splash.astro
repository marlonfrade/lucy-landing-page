---
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import Lucy from "~/assets/lucy-3.png";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";
import Discordbutton from "./new-layout/discordbutton.astro";
import Whatsappbutton from "./new-layout/whatsappbutton.astro";
---

<section class="relative h-full bg-black">
  <Starfield />
  <GitHubCorner />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div
    class="relative flex flex-col items-center justify-center pt-10 lg:flex-row lg:pl-8"
  >
    <div class="flex flex-col py-4">
      <h2 class="flex">
        <div
          class="gradient-text h-full pt-8 font-extrabold text-6xl lg:py-4 xl:text-8xl"
        >
          Lucy,
          <br />comunicação
          <br />inteligente.
        </div>
      </h2>
      <div
        class="relative grid grid-cols-2 space-x-4 pt-4 md:flex md:justify-center md:space-x-6 lg:justify-start"
      >
        <Discordbutton textColor="white" />
        <Whatsappbutton textColor="white" />
      </div>
    </div>
    <div
      id="astronaut"
      class="w-2/3 max-w-3xl sm:w-full sm:justify-center sm:self-auto"
    >
      <Image
        class="mx-auto mt-4"
        src={Lucy}
        width={600}
        height={600}
        loading="eager"
        alt="A floating astronaut in a space suit"
        aspectRatio="1:1"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #astronaut {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
