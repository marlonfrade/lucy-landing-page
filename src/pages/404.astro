---
import { Picture } from "@astrojs/image/components";
import Background from "~/assets/404-bg.jpeg";
const widths = [450, 800, 1200];
---

<div class="relative h-screen w-screen overflow-hidden bg-indigo-900">
  <Picture
    widths={widths}
    src={Background}
    class="absolute h-full w-full object-cover"
    alt=""
  />
  <div class="absolute inset-0 bg-black opacity-25"></div>
  <div
    class="container relative z-10 mx-auto flex items-center px-6 py-32 md:px-12 xl:py-40"
  >
    <div class="relative z-10 flex w-full flex-col items-center font-mono">
      <h1
        class="mt-4 text-center font-extrabold leading-tight text-white text-5xl"
      >
      </h1>
      <p class="my-44 animate-bounce font-extrabold text-white text-8xl">404</p>
    </div>
  </div>
</div>
